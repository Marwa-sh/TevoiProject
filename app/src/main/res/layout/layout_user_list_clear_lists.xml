<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_list_remove"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/tevoiBrownDark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/dialog_title_clear_user_list"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_marginStart="32dp"
        >
        <ImageButton
            android:id="@+id/imgBtnYes"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            android:src="@mipmap/accept_button_normal"
            android:scaleType="fitXY"
            android:clickable="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/Yes"
            android:layout_marginStart="4dp"
            android:textColor="@color/fontColor"
            />
        <ImageButton
            android:id="@+id/imgBtnNo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="42dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/close_button_normal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:textColor="@color/fontColor"
            android:text="@string/No"
            />


    </LinearLayout>
</LinearLayout>