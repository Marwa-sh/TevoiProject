<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tevoiBrownDark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
             <TextView
                 android:id="@+id/txt_register_load_error_message"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="10dp"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="25dp"
                 android:visibility="gone"
                 android:textColor="@color/tevoiBlack" />
             <Button
                 android:id="@+id/error_btn_retry"
                 style="@style/Widget.AppCompat.Button.Borderless"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginStart="10dp"
                 android:layout_marginTop="@dimen/activity_margin_content"
                 android:text="@string/btn_retry"
                 android:visibility="gone"
                 android:textColor="@color/white"/>

         </LinearLayout>
         <LinearLayout
             android:id="@+id/linear_form_fields"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

             <TextView
                 android:id="@+id/textView2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="9dp"
                 android:layout_marginStart="30dp"
                 android:text="@string/user_Name"
                 android:textColor="@color/fontColor" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="11"
               android:layout_marginTop="7dp"
               >
             <EditText
                 android:id="@+id/et_myprofile_user_name"
                 android:layout_width="match_parent"
                 android:layout_height="42dp"
                 android:layout_marginStart="30dp"
                 android:background="@drawable/rounded_edittext"
                 android:layout_gravity="center_vertical"
                 android:layout_weight="10"
                 android:layout_marginEnd="40dp"
                 android:clickable="false"
                 android:cursorVisible="false"
                 android:focusable="false"
                 android:focusableInTouchMode="false"
                 />
   <!--            <ImageButton
                   android:id="@+id/imgbtn_myprofile_edit_username"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@null"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:src="@mipmap/rename_list_normal_my_profile"
                   android:layout_marginEnd="15dp"
                   android:scaleType="fitCenter"
                   />-->
           </LinearLayout>

             <TextView
                 android:id="@+id/textView3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="30dp"
                 android:layout_marginTop="10dp"
                 android:text="@string/email"
                 android:textColor="@color/fontColor" />
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:weightSum="11"
                 android:layout_marginTop="7dp"
                 >

             <EditText
                 android:id="@+id/et_myprofile_email"
                 android:layout_width="match_parent"
                 android:layout_height="42dp"
                 android:layout_marginStart="30dp"
                 android:layout_gravity="center_vertical"
                 android:background="@drawable/rounded_edittext"
                 android:inputType="textWebEmailAddress"
                 android:layout_weight="10"
                 android:layout_marginEnd="40dp"
                 />

         <!--        <ImageButton
                     android:id="@+id/imgbtn_myprofile_edit_email"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginEnd="15dp"
                     android:layout_weight="1"
                     android:background="@null"
                     android:scaleType="fitCenter"
                     android:src="@mipmap/rename_list_normal_my_profile"

                     />-->
             </LinearLayout>
             <RelativeLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_marginEnd="0dp"
                 >
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"

                     >
                     <TextView
                         android:id="@+id/textView6"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/age"
                         android:layout_marginStart="30dp"
                         android:layout_marginTop="13.75dp"
                         android:textColor="@color/fontColor" />
                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:weightSum="11"
                         android:layout_marginTop="7dp"
                         >
                     <EditText
                         android:id="@+id/et_myprofile_age"
                         android:layout_width="85dp"
                         android:layout_height="41dp"
                         android:layout_marginStart="30dp"
                         android:background="@drawable/rounded_edittext"
                         android:inputType="number" />
                <!--         <ImageButton
                             android:id="@+id/imgbtn_myprofile_edit_age"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:background="@null"
                             android:layout_weight="1"
                             android:layout_gravity="center_vertical"
                             android:src="@mipmap/rename_list_normal_my_profile"
                             android:layout_marginEnd="15dp"
                             android:layout_marginStart="15dp"


                             />-->
                     </LinearLayout>
                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_alignParentEnd="true"
                     >
                     <TextView

                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/gender"
                         android:layout_marginStart="13dp"
                         android:layout_marginTop="13.75dp"
                         android:textColor="@color/fontColor" />
                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:weightSum="11"
                         android:layout_marginTop="7dp"
                         >
                     <Spinner
                         android:layout_width="97dp"
                         android:layout_height="41dp"
                         android:layout_marginStart="13dp"
                         android:id="@+id/spnr_myprofile_Gender"
                         android:background="@drawable/rounded_edittext"
                         android:layout_marginEnd="40dp"

                         />
                    <!--     <ImageButton
                             android:id="@+id/imgbtn_myprofile_edit_gender"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:background="@null"
                             android:layout_weight="1"
                             android:layout_gravity="center_vertical"
                             android:src="@mipmap/rename_list_normal_my_profile"
                             android:layout_marginEnd="15dp"
                             android:scaleType="fitCenter"
                             />-->
                     </LinearLayout>
                 </LinearLayout>
             </RelativeLayout>
             <TextView
                 android:id="@+id/textView7"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/occupation"
                 android:layout_marginStart="30dp"
                 android:layout_marginTop="13.75dp"
                 android:textColor="@color/fontColor" />
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:weightSum="11"
                 android:layout_marginTop="7dp"
                 >
             <EditText
                 android:id="@+id/et_myprofile_occupation"
                 android:layout_width="match_parent"
                 android:layout_height="42dp"
                 android:layout_marginStart="30dp"
                 android:background="@drawable/rounded_edittext"
                 android:layout_weight="10"
                 android:layout_marginEnd="40dp"
                 android:layout_gravity="center_vertical"

                 />
    <!--             <ImageButton
                     android:id="@+id/imgbtn_myprofile_edit_occupation"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@null"
                     android:layout_weight="1"
                     android:layout_gravity="center_vertical"
                     android:src="@mipmap/rename_list_normal_my_profile"
                     android:layout_marginEnd="15dp"
                     android:scaleType="fitCenter"
                     />-->
             </LinearLayout>
             <TextView
                 android:id="@+id/textView8"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/country"
                 android:layout_marginStart="30dp"
                 android:layout_marginTop="9dp"
                 android:textColor="@color/fontColor" />
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:weightSum="11"
                 android:layout_marginTop="7dp"
                 >
             <Spinner
                 android:layout_width="match_parent"
                 android:layout_height="42dp"
                 android:layout_marginStart="30dp"
                 android:background="@drawable/rounded_edittext"
                 android:layout_weight="10"
                 android:id="@+id/spnr_myprofile_countries"
                 android:layout_marginEnd="40dp"
                 android:gravity="start"
                 />
    <!--             <ImageButton
                     android:id="@+id/imgbtn_myprofile_edit_country"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@null"
                     android:layout_weight="1"
                     android:layout_gravity="center_vertical"
                     android:src="@mipmap/rename_list_normal_my_profile"
                     android:layout_marginEnd="15dp"
                     android:scaleType="fitCenter"
                     />-->
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_marginTop="16dp"
                 android:layout_marginBottom="20dp"
                 android:layout_marginStart="30dp"

                 >


                 <ImageButton
                     android:id="@+id/imgbtn_myprofile_save_changes"
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:background="@null"
                     android:scaleType="fitXY"
                     android:src="@mipmap/accept_button_normal"
                     android:layout_gravity="center_vertical"

                     />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/save_changes"
                     android:layout_gravity="center_vertical"
                     android:textColor="@color/fontColor"
                     android:layout_marginStart="7dp"/>
             </LinearLayout>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/change_password"
                 android:layout_marginStart="30dp"
                 android:textColor="@color/fontColor"
                 />

             <EditText
                 android:id="@+id/et_myprofile_change_password"
                 android:layout_width="match_parent"
                 android:layout_height="42dp"
                 android:layout_marginStart="30dp"
                 android:background="@drawable/rounded_edittext"
                 android:inputType="textPassword"
                 android:layout_marginEnd="40dp"
                 android:layout_marginTop="7dp"
                 />



             <EditText
                 android:id="@+id/et_myprofile_confirm_change_password"
                 android:layout_width="match_parent"
                 android:layout_height="42dp"
                 android:layout_marginStart="30dp"
                 android:layout_marginTop="17dp"
                 android:layout_marginEnd="40dp"
                 android:background="@drawable/rounded_edittext"
                 android:inputType="textPassword" />



             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_marginTop="16dp"
                 android:layout_marginBottom="50dp"
                 android:layout_marginStart="30dp"

                 >


                 <ImageButton
                     android:id="@+id/imgbtn_myprofile_reset_password"
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:background="@null"
                     android:scaleType="fitXY"
                     android:src="@mipmap/accept_button_normal"
                     android:layout_gravity="center_vertical"

                     />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/reset_password"
                     android:layout_gravity="center_vertical"
                     android:textColor="@color/fontColor"
                     android:layout_marginStart="7dp"/>
             </LinearLayout>

         </LinearLayout>

     </LinearLayout>
 </ScrollView>
