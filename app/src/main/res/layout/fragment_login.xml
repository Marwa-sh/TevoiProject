<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tevoiBrownDark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/tevoiBlack"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/imageViewIntroLogo"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:paddingTop="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="12dp"
                android:textColor="@color/fontColor"
                android:text="@string/login"
                android:textFontWeight="3"
                android:layout_gravity="center_horizontal"
                 />
        </LinearLayout>
       <!-- <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:src="@mipmap/profile_picture"
                android:foregroundTint="@color/fontColor"
                />
        </RelativeLayout>-->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginStart="31dp"
            android:text="@string/user_Name"
            android:textColor="@color/fontColor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rounded_edittext"
            android:id="@+id/et_User_Name"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="7dp"
            android:text="@string/password"
            android:textColor="@color/fontColor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:inputType="textPassword"

            android:background="@drawable/rounded_edittext"
            android:id="@+id/et_Password"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            >

            <Button
                android:id ="@+id/btn_Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_in"
                android:textColor="@color/white"
                android:background="@drawable/button_bg_rounded_corners"
                android:padding="@dimen/btn_padding"
                android:textSize="@dimen/btn_txt_size"
                />

            <!--<ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@mipmap/tick_blue"
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_Login"
                />
            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_in"
                android:textColor="@color/fontColor"
                android:layout_marginStart="7dp"
                android:layout_gravity="center_vertical"

                />-->

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@mipmap/profile_picture"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="83dp"
                android:id="@+id/btn_register"
                />
            <TextView
                android:id="@+id/txtRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:layout_gravity="center_vertical"
                android:textColor="@color/fontColor"
                android:layout_marginStart="7dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="25dp"
            android:visibility="gone"
            android:textColor="@color/tevoiBlack" />

        <TextView
            android:id="@+id/txt_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot"
            android:layout_marginStart="31dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/fontColor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            >
            <Button
                android:id ="@+id/btn_continue_as_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/continue_as_guest"
                android:textColor="@color/white"
                android:background="@drawable/button_bg_rounded_corners"
                android:padding="14dp"
                android:textSize="@dimen/btn_txt_size"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="40dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/continue_as_guest_text"
                android:textColor="@color/fontColor" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
