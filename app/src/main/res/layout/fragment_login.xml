<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tevoiBluePrimary">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"


                android:src="@drawable/userprofile_64x64_8"
                android:foregroundTint="@color/fontColor"


                />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="31dp"
            android:text="User Name"
            android:textColor="@color/fontColor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rounded_edittext"
            android:id="@+id/et_User_Name"

            />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textColor="@color/fontColor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:inputType="textPassword"

            android:background="@drawable/rounded_edittext"
            android:id="@+id/et_Password"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="32dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/tick"
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_Login"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:textColor="@color/fontColor"
                android:layout_marginLeft="7dp"
                android:layout_gravity="center_vertical"

                />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/cross"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="83dp"
                android:id="@+id/btn_Calcel_Login"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_gravity="center_vertical"
                android:textColor="@color/fontColor"
                android:layout_marginLeft="7dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <CheckBox
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:buttonTint="@color/fontColor"
                android:layout_gravity="center_vertical"
                android:id="@+id/checkBox_remember_me"

                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keep me logged in"
                android:textColor="@color/fontColor"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/fontColor" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your email"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="22dp"
            android:textColor="@color/fontColor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/et_enter_email"

            android:background="@drawable/rounded_edittext" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="32dp"
                android:layout_marginBottom="15dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/tick"
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_Request_new_password"
                />

            <TextView
                android:text="Request new password"
                android:textColor="@color/fontColor"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>