                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="12dp"
                android:textColor="@color/fontColor"
                android:text="Register"
                android:textFontWeight="3"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

