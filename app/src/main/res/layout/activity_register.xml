<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tevoiBluePrimary">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/userprofile_128x128_8"
        android:foregroundTint="@color/fontColor"


        />
</RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="30dp"
        android:text="Mandatory fileds*"
        android:textColor="@color/fontColor" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="30dp"
        android:text="User Name*"
        android:textColor="@color/fontColor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/et_register_user_name"
        android:background="@drawable/rounded_edittext" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Email*"
        android:textColor="@color/fontColor" />

    <EditText
        android:id="@+id/et_register_email"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_edittext"
        android:inputType="textWebEmailAddress" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password*"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="13.75dp"
        android:textColor="@color/fontColor" />

    <EditText
        android:id="@+id/et_register_password"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_edittext"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password*"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="13.75dp"
        android:textColor="@color/fontColor" />

    <EditText
        android:id="@+id/et_register_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_edittext"
        android:inputType="textPassword" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We need the following information to better guess your preferences"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/fontColor"
        android:textSize="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="13.75dp"
        android:textColor="@color/fontColor" />

        <EditText
            android:id="@+id/et_register_age"
            android:layout_width="85dp"
            android:layout_height="41dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"

            android:background="@drawable/rounded_edittext"
            android:inputType="number" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="13.75dp"
                android:textColor="@color/fontColor" />

            <Spinner
                android:layout_width="97dp"
                android:layout_height="41dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="13dp"
                android:id="@+id/spnrGender"

                android:background="@drawable/rounded_edittext" />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occupation"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="13.75dp"
        android:textColor="@color/fontColor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/et_register_occupation"
        android:background="@drawable/rounded_edittext" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/fontColor" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/spnrCountries"
        android:background="@drawable/rounded_edittext" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="16dp">

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="32dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/tick"
        android:layout_gravity="center_vertical"
        android:id="@+id/imgbtn_register"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@color/fontColor"
        android:layout_marginLeft="7dp"
        android:layout_gravity="center_vertical"
        />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/cross"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="83dp"
        android:id="@+id/imgbtn_register_cancel"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_gravity="center_vertical"
        android:textColor="@color/fontColor"
        android:layout_marginLeft="7dp"/>
</LinearLayout>
</LinearLayout>
</ScrollView>