<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/tevoiBluePrimary"
    tools:context=".TrackLocation">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tevoiBluePrimary"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location_header_fragement"
            android:textColor="@color/fontColor"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20.78dp"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_body_fragement"
            android:layout_marginLeft="32dp"
            android:textColor="@color/fontColor"
            android:textSize="11dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.78dp"
            >

            <ImageButton
                android:id="@+id/imgBtnOpenMapsApp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/rounded_button"
                android:src="@drawable/tick"
                android:scaleType="fitXY"
                android:onClick="locationClick"
                android:rotation="180"
                android:layout_marginLeft="32.25dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textColor="@color/fontColor"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                />
            <ImageButton
                android:id="@+id/imgBtnCloseLocationFragment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/rounded_button"
                android:scaleType="fitXY"
                android:src="@drawable/cross"
                android:onClick="locationClick"
                android:layout_marginLeft="69dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textColor="@color/fontColor"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>