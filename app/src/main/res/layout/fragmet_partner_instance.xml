<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:paddingBottom="3dp"
    android:id="@+id/partner_row_layout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="9">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/layout_partner_details"
                android:layout_marginHorizontal="5dp"
                android:background="@android:color/white"
                >
                <TextView
                    android:id="@+id/tv_partner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List Name"
                    android:paddingStart="16dp"
                    android:textColor="@color/tevoiBrownDark"
                    android:textSize="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partner Description"
                    android:paddingStart="16dp"
                    android:id="@+id/tv_partner_description"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_number_of_tracks"
                    android:paddingStart="16dp"
                    android:text="Number of tracks"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/hoverButtonsLayoutPartnerList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:visibility="invisible"
                android:clickable="true"
                android:focusable="true"
                android:weightSum="1"
                android:background="@color/tevoiBrownDark"
                >
                <!--<Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/tevoiBrownDark"
                    android:drawableTop="@mipmap/addtofilter_normal"
                    android:text="Add To filter"
                    android:clickable="true"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btn_add_partner_to_filter"
                    android:textSize="12dp"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:textColor="@color/fontColor"
                    android:textStyle="bold"
                    />-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableTop="@mipmap/addtofilter_normal_white"
                    android:text="Add To filter"
                    android:clickable="true"
                    android:id="@+id/btn_add_partner_to_filter"
                    android:textSize="@dimen/txt_size"
                    android:textColor="@color/fontColor"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/btn_drawer_padding"
                    android:paddingBottom="@dimen/btn_drawer_padding"
                    />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/tevoiBrownDark">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@mipmap/right_menu_normal"
            android:clickable="true"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:id="@+id/btn_partner_drawer"
            />
    </LinearLayout>
</LinearLayout>
