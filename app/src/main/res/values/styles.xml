    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FFFFFF</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FFFFFF
        </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#008577
        </item>
    </style>

    <style name="SCBSwitchBlue" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#00BFC6</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#75d5b6
        </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#75d5b6
        </item>
    </style>

    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">#ffd600</item>
        <item name="colorControlActivated">#0091ea</item>
        <item name="colorControlHighlight">#c51162</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
 </resources>
