    <!-- Base application theme. -->
    <style name="AppThemeOld" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/tevoiBluePrimary</item>
        <item name="colorPrimaryDark">@color/tevoiBluePrimary</item>
        <item name="colorAccent">@color/tevoiBluePrimary</item>
    </style>
